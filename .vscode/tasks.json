{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": ["$gcc"],
            "group": "none"
        },
        {
            "label": "Run C",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Compile C"
        }
    ]
}
